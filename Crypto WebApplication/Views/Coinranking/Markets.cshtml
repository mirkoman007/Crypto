@using Crypto_WebApplication.Models
@{
    Markets markets = ViewBag.markets as Markets;
}



<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Markets</th>
            <th scope="col">Base price</th>
            <th scope="col">24h trade volume</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in markets.Data.Markets)
        {
            <tr>
                <th scope="row">@item.Rank</th>
                <td><img src="@item.SourceIconUrl" width="26" height="26" /> @item.BaseSymbol/@item.QuoteSymbol</td>
                <td>$ @item.Price.ToString("0.00")</td>
                <td>$ @item.Volume.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>