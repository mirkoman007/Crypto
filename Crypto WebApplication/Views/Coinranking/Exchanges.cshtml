@using Crypto_WebApplication.Models
@{
    Exchanges exchanges = ViewBag.exchanges as Exchanges;
}


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Exchanges</th>
            <th scope="col">24h trade volume</th>
            <th scope="col">Markets</th>
            <th scope="col">Recommended</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in exchanges.Data.Exchanges)
        {
        <tr>
            <th scope="row">@item.Rank</th>
            <td><img src="@item.IconUrl" width="26" height="26" /> @item.Name</td>
            <td>$ @item.Volume</td>
            <td>@item.NumberOfMarkets</td>
            @if (item.Recommended)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
        }
    </tbody>
</table>